{
  "env": {
    "browser": true,
    "node": true,
    "bun": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"  // Add Prettier plugin
  ],
  "rules": {
    // Define your custom rules here
    // Enable Prettier errors as ESLint errors
    "prettier/prettier": "error"
  }
}
